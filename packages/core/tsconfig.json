{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "outDir": "dist",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    }
  }
}